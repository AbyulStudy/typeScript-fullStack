{
    "root": true,
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "standard"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "semi" : "off" , 
        "@typescript-eslint/semi" : [ "error" ],
        "quotes": [2, "double", { "avoidEscape": false }],
        "space-before-function-paren":"off"
    }
}
